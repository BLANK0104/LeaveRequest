<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Group 1: Dates and Reason -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/tvStartDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Date"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@+id/tvEndDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="End Date"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@+id/tvReason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reason"
                android:textSize="14sp"
                android:paddingBottom="4dp" />
        </LinearLayout>

        <!-- Group 2: Attendance and Days -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/tvTotalAttendance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Attendance"
                android:textSize="14sp"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@+id/tvAcademicDaysLeave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Academic Days Leave"
                android:textSize="14sp"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@+id/tvTotalDays"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Days"
                android:textSize="14sp"
                android:paddingBottom="4dp" />
        </LinearLayout>

        <!-- Group 3: Guardian Information -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/tvGuardianName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guardian Name"
                android:textSize="14sp"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@+id/tvGuardianContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guardian Contact"
                android:textSize="14sp"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@+id/tvGuardianEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guardian Email"
                android:textSize="14sp"
                android:paddingBottom="4dp" />
        </LinearLayout>

        <!-- Group 4: Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="8dp">


            <TextView
                android:id="@+id/tvFacultyStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Faculty Status"
                android:textSize="14sp"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@+id/tvHodStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Faculty Status"
                android:textSize="14sp"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@+id/tvWardenStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Faculty Status"
                android:textSize="14sp"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@+id/tvGatekeeperStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Faculty Status"
                android:textSize="14sp"
                android:paddingBottom="4dp" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>